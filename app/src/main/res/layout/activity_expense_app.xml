<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".ExpenseApp">

    <ImageView
        android:id="@+id/cart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_shopping_cart_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        />

    <TextView
        style="@style/Text"
        android:id="@+id/name"
        android:layout_below="@id/cart"
        android:layout_centerHorizontal="true"
        />

    <android.support.design.widget.TextInputLayout
        android:layout_width="266dp"
        android:id="@+id/Email_floating_bar"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_centerHorizontal="true"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/Password_floating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Email_floating_bar"
        android:layout_centerHorizontal="true"
        app:passwordToggleEnabled="true"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_edit_text"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="#000"
            android:textColorHint="#8cd0ac"
            />

    </android.support.design.widget.TextInputLayout>

    <Button
        style="@style/Button1"
        android:layout_below="@id/Password_floating_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />

</RelativeLayout>